{
  "name": "eemoji",
  "type": "module",
  "version": "1.1.5",
  "packageManager": "pnpm@8.10.0",
  "description": "(๑•̀ㅂ•́)و✧ Add emojis to git commits",
  "author": "Rettend",
  "license": "MIT",
  "homepage": "https://github.com/Rettend/eemoji#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rettend/eemoji.git"
  },
  "bugs": "https://github.com/Rettend/eemoji/issues",
  "keywords": [
    "commit",
    "emoji"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "eemoji": "./bin/eemoji.mjs",
    "eemoji-hook": "./bin/hook.sh",
    "eemoji-postinstall": "./bin/postinstall.cjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "stub": "unbuild --stub",
    "dev": "node ./bin/eemoji.mjs",
    "test": "vitest",
    "test:ui": "vitest --ui --coverage --api 9527",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "schema": "tsx scripts/schema",
    "release": "bumpp && unbuild && pnpm publish",
    "postinstall": "node ./bin/eemoji.mjs init -c none",
    "preuninstall": "node ./bin/eemoji.mjs cleanup",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@cozy-console/mini": "^0.0.1",
    "citty": "^0.1.4",
    "consola": "^3.2.3",
    "cosmiconfig": "^8.3.6",
    "jsonc-parser": "^3.2.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.8.9",
    "@vitest/coverage-istanbul": "^1.2.1",
    "@vitest/ui": "^1.2.1",
    "bumpp": "^9.2.0",
    "eemoji": "^1.1.5",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.7.0",
    "typescript": "5.3.3",
    "unbuild": "^2.0.0",
    "vitest": "^1.2.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
